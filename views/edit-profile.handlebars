
<div class="row">
  <div class="col-md-6">
    {{!-- left side --}}
      <div class="card cardColor">
   
      <img src="{{profile.photo}}" class="card-img-top p-3 rounded mx-auto d-block" alt="{{profile.photo}}">
    
    <br>
    
    {{!-- Image upload --}}
     <div class="flex-row">
      <div class="input-group p-3">
        <input class="form-control" type="file" id="profileImage" data-id="{{profile.id}}">
        <button id="saveImageBtn" class="btn btn-outline-secondary" type="button">Upload</button>
      </div>
    </div>

    <br>

        <form>
            
            <div class="m-3">
              <p class="lead">{{name}}</p>
            </div>
            <div class="mb-2">
              <button type="button" class="btn btn-sm btn-outline-danger" id="privacySwitch">{{profile.privacy}}</button>
            </div>
            <div class="m-3">
                <label for="exampleInputEmail1" class="form-label">Email</label>
                <input type="email" class="form-control" id="userEmail" aria-describedby="emailHelp" value={{profile.email}}>
                <div id="emailHelp" class="form-text"></div>
              </div>
            <div class="m-3">
                <label for="exampleInputPassword1" class="form-label">City</label>
                <input type="text" class="form-control" id="userCity" value={{profile.city}}>
              </div>
              <div class="m-3">
                <label for="exampleInputPassword1" class="form-label">Country</label>
                <input type="text" class="form-control" id="userCountry" value={{profile.country}}>
              </div>
              <div class="m-3">
                <label for="exampleInputPassword1" class="form-label">Phone</label>
                <input type="text" class="form-control" id="userPhone" value={{profile.phone}}>
              </div>
              <div class="m-3">
                <label for="exampleInputPassword1" class="form-label">Skills</label>
                <input type="text" class="form-control" id="userSkills" value="{{profile.skills}}">
              </div>

          </form>
          
      </div>
      

  </div>
  <div class="col-md-6 card cardColor">
    {{!-- Right side --}}
    <div class="card-body">
              <label for="exampleInputPassword1" class="form-label">About Me</label>
              <input type="text" class="form-control inputSize" id="userAbout" value="{{profile.about}}">

                <label for="exampleInputEmail1" class="form-label">Expereince</label>
                <input type="text" class="form-control inputSize" id="userExperience" aria-describedby="emailHelp" value="{{profile.experience}}">
                <div id="emailHelp" class="form-text"></div>
                
           
          <label for="exampleInputEmail1" class="form-label p-2">Hobbies</label>
                <input type="text" class="form-control inputSize" id="userHobbies" aria-describedby="emailHelp" value="{{profile.hobbies}}">
                <div id="emailHelp" class="form-text"></div>

                <div class="mb-3 card p-3 mt-3">
              <label for="facebook" class="form-label" ><img src="/img/facebook.png" height="50" width="50"/><a class="px-2"><input type="text" class="form-control" id="userFacebook" value="{{profile.facebook_link}}"></a></label>

              <label for="linkedin" class="form-label"><img src="/img/linkedin.png" height="50" width="50"/><a class="px-2"><input type="text" class="form-control" id="userFacebook" value="{{profile.linkedin_link}}"></a></label>

              <label for="github" class="form-label"><img src="/img/github (1).png" height="50" width="50"/><a class="px-2"><input type="text" class="form-control" id="userFacebook" value="{{profile.github_link}}"></a></label>
            </div>
                
            
          
      </div>


<a href="#" class="btn btn-primary">Save Changes</a>
  </div>
</div>

{{!-- Error modal --}}
<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="errorModalLabel">Oops..</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p class="lead" id="errorText"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script src="/js/imageUpload.js"></script>
<script src="/js/privacy.js"></script>